discovery.azure "prometheus2" {
	subscription_id = "subscription"

	managed_identity {
		client_id = "client"
	}
	follow_redirects = true
	enable_http2     = true
}

discovery.relabel "prometheus1" {
	targets = [{
		__address__ = "localhost:9090",
	}]

	rule {
		source_labels = ["__address1__"]
		regex         = "^(?:(.*))$"
		target_label  = "__param_target1"
	}

	rule {
		source_labels = ["__address2__"]
		regex         = "^(?:\")$"
		target_label  = "instance"
		replacement   = "${1}"
	}

	rule {
		source_labels = ["__address3__"]
		regex         = "^(?:\")$"
		target_label  = "instance"
		replacement   = "${1}"
	}
}

discovery.relabel "prometheus2" {
	targets = concat(
		discovery.azure.prometheus2.targets,
		[{
			__address__ = "localhost:9091",
		}],
	)

	rule {
		source_labels = ["__address1__"]
		regex         = "^(?:(.*))$"
		target_label  = "__param_target1"
	}

	rule {
		source_labels = ["__address2__"]
		regex         = "^(?:(.*))$"
		target_label  = "__param_target2"
	}
}

prometheus.scrape "prometheus1" {
	targets    = discovery.relabel.prometheus1.targets
	forward_to = [prometheus.remote_write.default.receiver]
	job_name   = "prometheus1"
}

prometheus.scrape "prometheus2" {
	targets    = discovery.relabel.prometheus2.targets
	forward_to = [prometheus.remote_write.default.receiver]
	job_name   = "prometheus2"
}

prometheus.remote_write "default" {
	endpoint {
		name = "remote1"
		url  = "http://remote-write-url1"

		queue_config {
			capacity             = 2500
			max_shards           = 200
			max_samples_per_send = 500
		}

		metadata_config {
			max_samples_per_send = 500
		}
	}
}
