prometheus.remote_write "default" {
	external_labels = {}

	endpoint {
		name = "remote1"
		url  = "http://remote-write-url1"

		queue_config {
			capacity             = 2500
			max_shards           = 200
			max_samples_per_send = 500
		}

		metadata_config {
			max_samples_per_send = 500
		}
	}
}

discovery.digitalocean "prometheus1" {
	follow_redirects = true
	enable_http2     = true
}

prometheus.scrape "prometheus1" {
	targets = concat(discovery.digitalocean.prometheus1.targets,
		[{
			__address__ = "localhost:9090",
		}])
	forward_to = [prometheus.remote_write.default.receiver]
	job_name   = "prometheus1"
}

discovery.digitalocean "prometheus2" {
	follow_redirects = true
	enable_http2     = true
}

prometheus.scrape "prometheus2" {
	targets    = discovery.digitalocean.prometheus2.targets
	forward_to = [prometheus.remote_write.default.receiver]
	job_name   = "prometheus2"
}