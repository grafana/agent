logging {
  level  = "debug"
  format = "logfmt"
}

local "file" "this-file" {
  # Must be running from the root directory of the repository for this relative
  # path to work.
  filename = "./cmd/agentflow/test-local-file.txt"
  detector = "fsnotify"
}

otel "receiver_zipkin" "default" {
  http {}

  output {
    traces = [otel.exporter_logging.default.input, otel.exporter_otlp.default.input]
  }
}

otel "receiver_jaeger" "default" {
  grpc {}
  http {}

  output {
    traces = [otel.exporter_logging.default.input, otel.exporter_otlp.default.input]
  }
}

otel "receiver_otlp" "default" {
  grpc {}
  http {}

  output {
    traces = [otel.exporter_logging.default.input, otel.exporter_otlp.default.input]
  }
}

otel "exporter_logging" "default" {}

otel "exporter_otlp" "default" {
  client {
    endpoint = "localhost:54317"
  }
}


